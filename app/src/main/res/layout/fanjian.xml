<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal|center_vertical"
    >

		 <TextView
		    android:id="@+id/fj_hs_info"
		    android:text="Select Hua Shi first"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
	   />
	   
	   <LinearLayout
	      android:orientation="horizontal"
	      android:layout_width="wrap_content"
	      android:layout_height="wrap_content"
	      >
	      <ImageView
				   android:id="@+id/fj_fangpian"
				   android:layout_width="wrap_content"
				   android:layout_height="wrap_content"
				   android:src="@drawable/hs_fangpian_big"
				   android:background="@drawable/bg_black"  
           android:padding="1dp"	
			  />
	      <ImageView
				   android:id="@+id/fj_hongtao"
				   android:layout_width="wrap_content"
				   android:layout_height="wrap_content"
				   android:src="@drawable/hs_hongtao_big"
				   android:background="@drawable/bg_black"  
           android:padding="1dp"	
			  />
	      <ImageView
				   android:id="@+id/fj_meihua"
				   android:layout_width="wrap_content"
				   android:layout_height="wrap_content"
				   android:src="@drawable/hs_meihua_big"
				   android:background="@drawable/bg_black"  
           android:padding="1dp"	
			  />
	      <ImageView
				   android:id="@+id/fj_heitao"
				   android:layout_width="wrap_content"
				   android:layout_height="wrap_content"
				   android:src="@drawable/hs_heitao_big"
				   android:background="@drawable/bg_black"  
           android:padding="1dp"	
			  />
     </LinearLayout>
		 
		 <Button
	     android:id="@+id/fj_okBtn"
	     android:text="OK"
	     android:layout_width="wrap_content"
	     android:layout_height="wrap_content"
	   />

</LinearLayout>
